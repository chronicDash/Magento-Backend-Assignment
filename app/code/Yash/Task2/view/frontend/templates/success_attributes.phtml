<?php
/** @var \Yash\Task2\Block\Checkout\SuccessOrderAttributes $block */
$order = $block->getOrder();

if ($order) {
    $expectedDate = $order->getData('expected_delivery_date');
    $processingStatus = $order->getData('processing_status');
    $customInstructions = $order->getData('custom_instructions');

    if ($expectedDate || $processingStatus || $customInstructions): ?>
        <div class="custom-order-info success">
            <h2>Order Details</h2>
            <ul>
                <?php if ($expectedDate): ?>
                    <li><strong>Expected Delivery Date:</strong> <?= $block->escapeHtml($expectedDate) ?></li>
                <?php endif; ?>
                <?php if ($processingStatus): ?>
                    <li><strong>Processing Status:</strong> <?= $block->escapeHtml($processingStatus) ?></li>
                <?php endif; ?>
                <?php if ($customInstructions): ?>
                    <li><strong>Instructions:</strong> <?= $block->escapeHtml($customInstructions) ?></li>
                <?php endif; ?>
            </ul>
        </div>
    <?php endif;
}
?>