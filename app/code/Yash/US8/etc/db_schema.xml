<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="employee_table" resource="default" engine="innodb" comment="Employee Table">
        <!-- <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/> -->
        <column xsi:type="varchar" name="employee_id" nullable="false" length="20" comment="Employee ID"/>
        <column xsi:type="varchar" name="first_name" nullable="false" length="30" comment="First Name"/>
        <column xsi:type="varchar" name="last_name" nullable="false" length="30" comment="Last Name"/>
        <column xsi:type="varchar" name="email_id" nullable="false" length="255" comment="Email ID"/>
        <column xsi:type="varchar" name="address" nullable="false" length="255" comment="Address"/>
        <column xsi:type="varchar" name="phone_number" nullable="false" length="10" comment="Phone Number"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="employee_id"/>
        </constraint>
    </table>

</schema>