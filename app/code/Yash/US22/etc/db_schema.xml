<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="my_popup_table" resource="default" engine="innodb" comment="Popup Table">
        <column xsi:type="int" name="popup_id" unsigned="false" nullable="false" identity="true" comment=""/>
        <column xsi:type="varchar" name="name" nullable="false" comment=""/>
        <column xsi:type="mediumtext" name="content" nullable="false" comment=""/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment=""/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" comment=""/>
        <column xsi:type="int" name="is_active" unsigned="false" nullable="false" comment=""/>
        <column xsi:type="int" name="timeout" unsigned="false" nullable="false" default="1" comment=""/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="popup_id"/>
        </constraint>
        <index referenceId="YASH_US22_NAME_CONTENT" indexType="fulltext">
            <column name="name" />
            <column name="content" />
        </index>
    </table>
</schema>