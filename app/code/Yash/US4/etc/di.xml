<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Yash\US4\Logger\Handler" >
        <arguments>
            <argument name="filesystem" xsi:type="object" >\Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Yash\US4\Logger\Logger" >
        <arguments>
            <argument name="name" xsi:type="string" >Logger</argument>
            <argument name="handlers" xsi:type="array" >
                <item name="system" xsi:type="object">\Yash\US4\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Framework\App\FrontControllerInterface" >
        <arguments>
            <argument name="routers" xsi:type="array">
                <item name="my_custom_router" xsi:type="object"> \Yash\US4\Controller\Index\Router</item>
            </argument>
        </arguments>
    </type>
</config>